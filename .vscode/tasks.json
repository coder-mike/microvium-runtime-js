{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
			{
					"label": "Rollup build and watch",
					"type": "npm",
					"script": "build-tsc:watch",
					"problemMatcher": [
						"$tsc-watch"
					],
					"presentation": {
							"reveal": "never"
					},
					"group": {
							"kind": "build",
							"isDefault": true
					},
					"isBackground": true
			}
	]
}